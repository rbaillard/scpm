<th id="<%= wl_ctotal[:name]%>_<%= wl_ctotal[:id]%>"

<% if defined?(high_limit) and wl_ctotal[:value] > high_limit %>
  <% if not defined?(reverse) or !reverse %>
    style="background-color: red; color:white;"
  <% else %>
    style="background-color: orange; color:white;"
  <% end %>
<% elsif defined?(low_limit) and wl_ctotal[:value] < low_limit %>
  <% if not defined?(reverse) or !reverse %>
    style="background-color: orange; color:#333;"
  <% else %>
    style="background-color: red; color:white;"
  <% end %>
<% end %>
>
<%= wl_ctotal[:display] %>
</th>
