<% if wl_task_planning[:week] and @start_date_condition=="not detected"%>
	<% @start_date_condition = "detected"%> 
	<% @cpt = 1 %>
<%end%>

<th class="planning_task"<% if wl_task_planning[:week] %> title="<%=wl_task_planning[:task].name%>" id="<%= @task_id%>" style="background: <%=color%>;" <% end %> >

	<% if @start_date_condition == "detected" and @cpt != nb_cells and wl_task_planning[:week]%>
		<%= wl_task_planning[:task].start_date.day %>/<%=wl_task_planning[:task].start_date.month %>
	<%end%>

	<% if @cpt == nb_cells and wl_task_planning[:week]%>
		<%= wl_task_planning[:task].end_date.day %>/<%=wl_task_planning[:task].end_date.month %> 
	<%end%>

</th>

<% @cpt += 1 if wl_task_planning[:week] %>
<% @start_date_condition = "done" if @start_date_condition=="detected" %>
